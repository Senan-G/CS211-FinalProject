            <Label layoutX="32.0" layoutY="26.0" text="Task Name" />
            <Label layoutX="32.0" layoutY="84.0" text="Short Description" />
            <TextField fx:id="desc" layoutX="32.0" layoutY="101.0" prefHeight="25.0" prefWidth="172.0" />
