<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="279.0" prefWidth="141.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="application.SortByController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="303.0" prefWidth="147.0" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="urgencyButton" layoutX="14.0" layoutY="63.0" mnemonicParsing="false" onAction="#handleUrgencyClick" prefHeight="25.0" prefWidth="111.0" text="Urgency" />
            <Button fx:id="dueDateButton" layoutX="14.0" layoutY="98.0" mnemonicParsing="false" onAction="#handleDueClick" prefHeight="25.0" prefWidth="111.0" text="Due Date" />
            <Button fx:id="dateAddedButton" layoutX="14.0" layoutY="133.0" mnemonicParsing="false" onAction="#handleAddedClick" prefHeight="25.0" prefWidth="111.0" text="Date Added" />
            <Button fx:id="difficultyButton" layoutX="14.0" layoutY="168.0" mnemonicParsing="false" onAction="#handleDifficultyClick" prefHeight="25.0" prefWidth="111.0" text="Difficulty" />
            <Button fx:id="completeButton" layoutX="14.0" layoutY="202.0" mnemonicParsing="false" onAction="#handleCompleteButton" text="Time to Complete" />
            <Label layoutX="21.0" layoutY="22.0" prefHeight="26.0" prefWidth="97.0" text="Sort Options" textAlignment="CENTER">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <Button fx:id="cancelButton" layoutX="14.0" layoutY="238.0" mnemonicParsing="false" onAction="#handleCancelClick" prefHeight="25.0" prefWidth="111.0" text="Cancel" textFill="#bf2323" />
         </children>
    </AnchorPane>
  </children>
</VBox>
